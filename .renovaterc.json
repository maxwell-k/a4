{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assignees": [
    "maxwell-k"
  ],
  "extends": [
    "config:best-practices"
  ],
  "packageRules": [
    {
      "description": "Automerge upgrades to GitHub Actions",
      "matchManagers": [
        "github-actions"
      ],
      "automerge": true
    },
    {
      "description": "Automerge upgrades to package.json",
      "matchFileNames": [
        "package.json"
      ],
      "automerge": true
    }
  ]
}
