{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assignees": [
    "maxwell-k"
  ],
  "extends": [
    "config:best-practices"
  ],
  "packageRules": [
    {
      "description": "Automerge upgrades to .github/workflows/main.yaml",
      "matchFileNames": [
        ".github/workflows/main.yaml"
      ],
      "automerge": true
    },
    {
      "description": "Automerge upgrades to package.json",
      "matchFileNames": [
        "package.json",
        "package-lock.json"
      ],
      "automerge": true
    }
  ]
}
